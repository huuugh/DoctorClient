<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forget_pw_bg"
    tools:context="doctorclient.slinph.com.doctor_client.Activities.ForgetPWActivity">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_logo"
        android:id="@+id/iv_logo"
        android:layout_marginTop="40dp"/>

    <EditText
        android:paddingStart="5dp"
        android:drawablePadding="5dp"
        android:hint="手机号码"
        android:textSize="15sp"
        android:textColorHint="#AAFFFF"
        android:textCursorDrawable="@null"
        android:textColor="@android:color/white"
        android:layout_marginTop="35dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/iv_logo"
        android:background="@null"
        android:inputType="phone"
        android:drawableBottom="@drawable/edittext_baseline"
        android:drawableStart="@drawable/user_account"
        android:id="@+id/et_account_register"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et_account_register"
        android:id="@+id/fl_ver_register">
        <EditText
            android:paddingStart="5dp"
            android:drawablePadding="5dp"
            android:hint="验证码"
            android:textSize="15sp"
            android:textColorHint="#AAFFFF"
            android:textCursorDrawable="@null"
            android:textColor="@android:color/white"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableBottom="@drawable/edittext_baseline"
            android:drawableStart="@drawable/user_verification"
            android:inputType="number"
            android:id="@+id/et_verification_register"/>

        <Button
            android:layout_width="90dp"
            android:background="@drawable/round_button_selector"
            android:layout_marginBottom="5dp"
            android:text="获取验证码"
            android:id="@+id/bt_register_verification"
            android:textColor="@android:color/white"
            android:layout_marginEnd="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"/>
    </FrameLayout>

    <EditText
        android:paddingStart="5dp"
        android:drawablePadding="5dp"
        android:hint="新密码"
        android:textSize="15sp"
        android:textColorHint="#AAFFFF"
        android:textCursorDrawable="@null"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/fl_ver_register"
        android:background="@null"
        android:drawableBottom="@drawable/edittext_baseline"
        android:drawableStart="@drawable/password_lock"
        android:inputType="textPassword"
        android:id="@+id/et_password_register"/>

    <EditText
        android:paddingStart="5dp"
        android:drawablePadding="5dp"
        android:hint="确认密码"
        android:textSize="15sp"
        android:textColorHint="#AAFFFF"
        android:textCursorDrawable="@null"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/et_password_register"
        android:background="@null"
        android:drawableBottom="@drawable/edittext_baseline"
        android:drawableStart="@drawable/password_lock"
        android:inputType="textPassword"
        android:id="@+id/et_confirm_password_register"/>

    <LinearLayout
        android:layout_below="@id/et_confirm_password_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingStart="5dp"
        android:paddingEnd="60dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ll_check_group">
        <CheckBox
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:checked="true"
            android:layout_marginStart="100dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:id="@+id/cb_protocol_register"
            android:drawableStart="@drawable/circle_checkbox_selector"
            android:textColor="@android:color/white"/>

        <TextView
            android:text="@string/user_protocol"
            android:padding="2dp"
            android:autoLink="all"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <Button
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_check_group"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:text="注册"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button_selector"
        android:id="@+id/bt_register"/>
</RelativeLayout>
